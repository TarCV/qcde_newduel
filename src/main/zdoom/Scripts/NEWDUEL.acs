Script "QCD_Event"(int type, int arg1, int arg2) Event {
    if (type == 5) {
        updateMatchStatus(ON_ROUND_STARTED);
	} if (type == 6) {
        updateMatchStatus(ON_ROUND_FINISHED);
    } else if (type == 7) {
        updateMatchStatus(ON_ROUND_ABORTED);
    }
}

