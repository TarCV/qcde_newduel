    if (getTeamProperty(playerTeam(), TPROP_NumPlayers) > 1) {
        kickFromGame(playerNumber(), "Only one player per team is allowed");
        terminate;
    }

	ACS_NamedExecuteAlways("QCDE_Duel_Respawn", 0);
